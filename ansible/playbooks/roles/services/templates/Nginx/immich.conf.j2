server {
    # listen 13444 ssl;
    listen 80;
    # ssl_certificate /etc/letsencrypt/live/sirgeorgelordofthevoid.com/fullchain.pem;    # Path to your fullchain.pem
    # ssl_certificate_key /etc/letsencrypt/live/sirgeorgelordofthevoid.com/privkey.pem;  # Path to your privkey.pem
    server_name immich.{{ external_hostname }};
    server_tokens off;

    location / {
        proxy_pass         http://immich-server:2283;
        proxy_set_header   Host $http_host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;
        proxy_read_timeout 1200s;
        proxy_set_header   X-Forwarded-Proto $scheme;

	proxy_http_version 1.1;
        proxy_set_header   Upgrade    $http_upgrade;
        proxy_set_header   Connection "upgrade";
        proxy_redirect     off;

    }

    # include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
